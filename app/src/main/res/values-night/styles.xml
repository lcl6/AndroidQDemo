<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 中进右上出（缩放） -->
    <style name="animation_center_in_right_out" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_center_in</item>
        <item name="android:windowExitAnimation">@anim/anim_right_out</item>
    </style>

    <style name="BaseDialog" parent="Theme.AppCompat.Light.Dialog">
        <!--无边框-->
        <item name="android:windowFrame">@null</item>
        <!--提示框是否是浮动的-->
        <item name="android:windowIsFloating">true</item>
        <!--控件启动前的背景色-->
        <item name="android:windowContentOverlay">@null</item>
        <!--提示框的背景颜色-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--软键盘设置-->
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <!-- 背景缓存色 -->
        <item name="android:colorBackgroundCacheHint">@null</item>
        <!-- 是否半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--是否充许对话框的背景变暗。为true则充许变暗-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <!-- 底部进底部出 -->
    <style name="animation_bottom_in_bottom_out" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/anim_bottom_out</item>
    </style>



    <!--文字布局-->
    <style name="main_text" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="background">@color/black_color</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">10dp</item>

    </style>


    <style name="view_line" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="background">@color/colorPrimary</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

</resources>
