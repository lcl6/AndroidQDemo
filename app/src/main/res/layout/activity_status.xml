<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ac.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_lower"
            style="@style/main_text"
            android:text="低电量模式"
            />
        <TextView
            android:id="@+id/tv_naga"
            style="@style/main_text"
            android:text="隐藏导航栏"
            />
        <TextView
            android:id="@+id/tv_naga_expand"
            style="@style/main_text"
            android:text="隐藏导航栏布局扩展到导航栏和状态栏"
            />
        <TextView
            android:id="@+id/tv_full"
            style="@style/main_text"
            android:text="全屏"
            />

        <TextView
            android:id="@+id/tv_full_hide"
            style="@style/main_text"
            android:text="全屏--SYSTEM_UI_FLAG_LAYOUT_FULLSCREEN"
            />

        <TextView
            android:id="@+id/tv_full_sitick"
            style="@style/main_text"
            android:text="SYSTEM_UI_FLAG_IMMERSIVE_STICKY"
            />

        <TextView
            android:id="@+id/tv_full_sitick_nage"
            style="@style/main_text"
            android:text="SYSTEM_UI_FLAG_IMMERSIVE"
            />
        <TextView
            android:id="@+id/tv_window_color"
            style="@style/main_text"
            android:text="状态栏颜色"
            />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>