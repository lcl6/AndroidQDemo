<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ac.MainActivity">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_test_res"
            style="@style/main_text"
            android:text=""
            />
        <TextView
            android:id="@+id/tv_test_q"
            style="@style/main_text"
            android:text="zxing扫一扫"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_qdr"
            />
        <TextView
            android:id="@+id/tv_test_creat_qda"
            style="@style/main_text"
            android:text="zxing生成二维码"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_bar"
            />

        <TextView
            android:id="@+id/tv_test_creat_bar"
            style="@style/main_text"
            android:text="zxing生成条形码"
            />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>